{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            // The compiler command. In this case, we're using g++.
            "command": "/usr/bin/g++",
            // The arguments passed to the compiler.
            "args": [
                "-fdiagnostics-color=always",
                // Use the latest finalized C++ standard, C++23.
                "-std=c++23",
                // Enable most warning messages.
                "-Wall",
                // Warn about constructs that may not follow effective C++ guidelines.
                "-Weffc++",
                // Enable extra warning messages.
                "-Wextra",
                // Warn about implicit type conversions that may change a value.
                "-Wconversion",
                // Warn when sign conversions may alter a variable's value.
                "-Wsign-conversion",
                // Warn when a local variable shadows another variable.
                "-Wshadow",
                // Enable debug configuration 
                "-ggdb",
                // Enable realese configuration
                // "-O2",
                // "-DNDEBUG",
                // Disable compilier extensions
                "-pedantic-errors",
                // complie my own header-only libraries
                "-I${HOME}/Documents/HOME/cpp-practice-projects/myLibs/Shape2D",
                "-I${HOME}/Documents/HOME/cpp-practice-projects/myLibs/utilities",
                // Add additionally header files from
                // current workspace folder
                "-I${workspaceFolder}/include",
                // complie all available C++ files
                "${fileDirname}/**.cpp",
                // Specify the output file. The output will be placed in the same directory with the same base name.
                // "-o",
                // "${fileDirname}/${fileBasenameNoExtension}",
                // Link raylib and dependencies
                "-lraylib",
                "-lGL",
                "-lm",
                "-lpthread",
                "-ldl",
                "-lrt",
                "-lX11"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            // Problem matcher for capturing compiler errors and warnings from g++.
            "problemMatcher": [
                "$gcc"
            ],
            // The group of this task. "build" lets VS Code know it's a compilation task.
            "group": {
                "kind": "build",
                "isDefault": true
            },
            // Optional detail to explain what this task does.
            "detail": "Task generated by Debugger."
        }
    ]
}